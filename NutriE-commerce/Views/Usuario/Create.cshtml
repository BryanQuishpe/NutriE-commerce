@model NutriE_commerce.Models.tblUsuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
    <div class="container">
        <br />
        <br />
        <center><h1>Crear Usuario </h1></center>
        <hr />
        <br />
        <div class="row">
            <div class="col-md-6">
                <label for="inputEmail4" class="form-label">Nombre</label>
                @Html.EditorFor(model => model.usuNombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usuNombre, "", new { @class = "text-danger" })
            </div>

            <div class="col-md-6">
                <label for="inputPassword4" class="form-label">Cédula</label>
                @Html.EditorFor(model => model.usuCedula, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usuCedula, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <label for="inputAddress" class="form-label">Teléfono</label>
                @Html.EditorFor(model => model.usuTelefono, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usuTelefono, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-6">
                <label for="inputAddress2" class="form-label">Correo</label>
                @Html.EditorFor(model => model.usuCorreo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usuCorreo, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-md-6">
                <label for="inputCity" class="form-label">Contraseña</label>
                @Html.EditorFor(model => model.usuContra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usuContra, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <label for="inputCity" class="form-label">Estado</label>
                @Html.EditorFor(model => model.usuEstado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usuEstado, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <hr />
        <div class="form-group">
            <div class="d-grid gap-2">
                <input type="submit" value="Crear nuevo Usuario" class="btn btn-primary" />
            </div>
        </div>
        <br />
        <div class="btn btn-warning" >
            @Html.ActionLink("Ir a Usuario", "Index")
        </div>
    </div>
    }
    
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
</body>
</html>
