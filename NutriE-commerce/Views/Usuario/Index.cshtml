@model IEnumerable<NutriE_commerce.Models.tblUsuario>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

</head>
<body>
    <div class="container">
        <br />
        <br />
        <center><h1>Litado de Usuarios</h1></center>
        <hr />
        <br />

        <p>
            <div class="btn-group">
                <button type="submit" name="add_product" class="btn btn-warning" aria-current="page">  @Html.ActionLink("Crear Nuevo", "Create")</button>
            </div>
        </p>

        <div class="panel panel-default">

            <div class="panel-body">
                <table class="table table-striped" style="font-family: Verdana, Arial, Helvetica, sans-serif; font-style:italic;">
                    <thead>
                        <tr>
                            <th class="text-center"> Nombre </th>
                            <th class="text-center"> Cédula </th>
                            <th class="text-center"> Telefono </th>
                            <th class="text-center"> Correo </th>
                            <th class="text-center"> Contraseña </th>
                            <th class="text-center"> Estado </th>
                            <th class="text-center"> Rol</th>
                            <th class="text-center"> Acciones</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.usuNombre)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.usuCedula)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.usuTelefono)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.usuCorreo)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.usuContra)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.usuEstado)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.tblRol.rolNombre)
                                </td>

                                <td class="text-center">
                                    @Html.ActionLink("Editar", "Edit", new { id = item.usuId }) |
                                    @Html.ActionLink("Detalle", "Details", new { id = item.usuId }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.usuId })
                                </td>
                            </tr>

                        }
                    </tbody>






                </table>
            </div>
        </div>
    </div>
</body>
</html>
