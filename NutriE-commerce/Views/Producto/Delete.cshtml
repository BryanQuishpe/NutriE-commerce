@model NutriE_commerce.Models.tblProducto

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

</head>
<body>

    <div class="container">
        <br />
        <br />
        <center><h1>Eliminar Producto </h1></center>
        <hr />
        <br />

        <h3>¿Estás segura de que quieres eliminar este elemento?</h3>
        <br />
        <div class="panel-body">
            <table class="table table-striped" style="font-family: Verdana, Arial, Helvetica, sans-serif; font-style:italic;">
                <thead>
                    <tr>

                        <th class="text-center"> Código </th>
                        <th class="text-center"> Nombre </th>
                        <th class="text-center"> Stock </th>
                        <th class="text-center"> Detalle </th>
                        <th class="text-center"> Precio </th>
                        <th class="text-center"> Observación </th>
                        <th class="text-center"> Fecha </th>
                        <th class="text-center"> Imagen</th>
                        <th class="text-center"> Categoria </th>



                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.proCodigo)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.proNombre)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.proStock)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.proDesc)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.proPrecio)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.proObser)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.proFecha)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.proEstado)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(model => model.tblCategoria.catNombre)
                        </td>

                    </tr>

                </tbody>

            </table>
        </div>

        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Eliminar Producto" class="btn btn-primary" /> 
                @Html.ActionLink("Ir a Productos", "Index")
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>

</body>
</html>
