@model IEnumerable<NutriE_commerce.Models.tblCategoria>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <br />
        <br />
        <center><h1>Litado de Categorias</h1></center>
        <hr />
        <br />
        <p>
            <div class="btn-group">
                <button type="submit" name="add_product" class="btn btn-warning" aria-current="page"> @Html.ActionLink("Agregar Categoria", "Create")</button>
            </div>
        </p>
        <br />
        <div class="panel panel-default">

            <div class="panel-body">
                <table class="table table-striped" style="font-family: Verdana, Arial, Helvetica, sans-serif; font-style:italic;">

                    <thead>
                        <tr>

                            <th class="text-center"> Nombre </th>
                            <th class="text-center"> Descripción </th>
                            <th class="text-center"> Estado </th>

                            <th class="text-center"> Acciones </th>


                        </tr>
                    </thead>
                    <tbody style="text-align:center">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.catNombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.catDesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.catEstado)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.catId }) |
                                    @Html.ActionLink("Detalle", "Details", new { id = item.catId }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.catId })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
</body>
</html>
