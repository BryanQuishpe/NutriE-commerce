@model NutriE_commerce.Models.tblCategoria

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <br />
        <br />
        <center><h1>Eliminar Categoria </h1></center>
        <hr />
        <br />

        <h3>¿Estás segura de que quieres eliminar este elemento?</h3>
        <br />
        <dl class="dl-horizontal">
            <dt>
                <label for="formGroupExampleInput" class="form-label">Nombre </label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.catNombre)
            </dd>

            <dt>
                <label for="formGroupExampleInput" class="form-label">Descripción </label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.catDesc)
            </dd>

            <dt>
                <label for="formGroupExampleInput" class="form-label">Estado </label>
            </dt>

            <dd>
                @Html.DisplayFor(model => model.catEstado)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Eliminar " class="btn btn-warning" />
                @Html.ActionLink("Ir a Categoria", "Index")
            </div>
        }
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
</body>
</html>
